{
  "files.eol": "\n",
  "files.trimTrailingWhitespace": true,
  "editor.insertSpaces": true,
  "editor.tabSize": 2,
  "editor.rulers": [
    100
  ],
  "editor.wordWrap": "wordWrapColumn",
  "editor.wordWrapColumn": 100,
  "editor.wrappingIndent": "indent",
  "languageServerHaskell.hieExecutablePath": "~/.local/bin/hie",
  "saveAndRun": {
    "commands": [
      {
        "match": "\\.hs$",
        "cmd": "~/.local/bin/hindent ${file}",
        "useShortcut": false,
        "silent": true
      }
    ]
  },
  // The url of the Hoogle server to query. Can point to a local Hoogle server.
  "hoogle-vscode.url": "http://127.0.0.1:19000"
}